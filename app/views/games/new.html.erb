<h2 class="title">New game</h1>

<ul class="letters-grid">
  <% @letters.each do |letter| %>
    <li class="letter"><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post">
  <label for="word" class="mb-3">What is the longest word you can find?</label>
  <div class="input-group mb-3">
    <input id="word" name="word" type="text" class="form-control" placeholder="Type your word" aria-label="Recipient's username" aria-describedby="button-addon2">
    <input name="letters" type="hidden" value=<%= @letters.join %> />
    <button class="btn btn-primary" type="submit" id="button-addon2">Button</button>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
